<div class="row">
  <% if logged_in? %>
    <div class="span0 well text-center">
      <%= link_to vote_post_path(post, vote: :true), { method: :post, class: "d-block" } do %>
        <i class="icon-arrow-up"></i>
      <% end %>
      <p class="no-whitespace"><%= post.total_votes %></p>
      <%= link_to vote_post_path(post, vote: :false), method: :post do %>
        <i class="icon-arrow-down"></i>
      <% end %>
    </div>
  <% end %>
  <div class="span8 well">
    <div class="post-categories">
      <%= render post.categories %>
    </div>
    <h4><%= link_to post.title, format_url(post.url) %></h4>
    <p><%= post.description %></p>
    <p>
      <span class="quiet">posted by <%= post.creator.username %></span>
      <small>at <%= format_date(post.created_at) %></small>
    </p>
    <small>
      <span>
        <%= link_to("#{post.comments.size} comments", post_path(post)) %>
      </span>
    </small>
    <% if logged_in? %>
      <p>
        <small>
          <span>
            <%= link_to("Edit", edit_post_path(post)) %>
          </span>
        </small>
      </p>
    <% end %>
  </div>
</div>
