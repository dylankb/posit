<% show_post_detail ||= false %>

<div class="row">
  <% if logged_in? %>
    <div class="span0 well text-center">
      <%= link_to vote_post_comment_path(comment.post, comment, vote: :true), { method: :post, class: "d-block", remote: true } do %>
        <i class="icon-arrow-up"></i>
      <% end %>
      <p id="comment_<%= comment.id %>_votes" class="no-whitespace"><%= comment.total_votes %></p>
      <%= link_to vote_post_comment_path(comment.post, comment, vote: :false), { method: :post, remote: true } do %>
        <i class="icon-arrow-down"></i>
      <% end %>
    </div>
  <% end %>
  <div class="well span8">
    "<%= comment.body %>"
    <% if show_post_detail %>
      on <%= link_to comment.post.title, post_path(comment.post) %>
    <% end %>
    <p>
      <span class="quiet">by <%= link_to comment.commenter.username, '' %></span> <small>at <%= format_date(comment.created_at) %></small>
  </div>
</div>
